<h1><%= title || "Delete Vehicle" %></h1>

<%- messages() %>

<% if (errors && errors.array) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
<% } %>  

<div class="login-container">
  <p>Confirm Deletion - The delete is permanent.</p>

  <form action="/inv/delete" method="post" class="login-form" id="deleteForm">

    <label for="inv_make">Make</label>
    <input type="text" id="inv_make" name="inv_make" required value="<%= inv_make %>" readonly>

    <label for="inv_model">Model</label>
    <input type="text" id="inv_model" name="inv_model" required value="<%= inv_model %>" readonly>

    <label for="inv_year">Year</label>
    <input type="number" id="inv_year" name="inv_year" required value="<%= inv_year %>" readonly>

    <label for="inv_price">Price</label>
    <input type="number" id="inv_price" name="inv_price" required step="0.01" value="<%= inv_price %>" readonly>

    <br>
    <input type="submit" value="Delete Vehicle" id="submitBtn">
    <!-- Hidden input to store the ID of the vehicle -->
    <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>

    <p><a href="/inv">Back to Management</a></p>
  </form>
</div>